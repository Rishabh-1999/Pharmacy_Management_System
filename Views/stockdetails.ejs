<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link href="/css/partial.css" rel="stylesheet" type="text/css">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>

<body>

    <div id="viewscreen">
        <%- include('partials/sidebar.ejs') %>

        <div class="container">
            <div class="col-sm-3"></div>
            <div class="col-sm-8" style="border: 5px solid rgba(0,0,0,0.1);margin-top: 40px;">
                <center>
                    <h1 class="heading" style="color: black;">Stock Details of <%- stock_details.medicineType.name %> by
                        <%- stock_details.user.name %></h1>
                </center>
                <div>
                    <h2>Name: <%- stock_details.medicineType.name %></h2>
                    <h2>Seller Name: <%- stock_details.user.name %></h2>
                    <h2>No of Stock: <%- stock_details.no_of_stock %></h2>
                    <h2>Price: <%- stock_details.price %></h2>
                    <div>
                        <input type="number" id="no_of_stock" max="<%- stock_details.no_of_stock %>" min="0" value="1">
                        <button class="btn btn-primary" id="buy"
                            onclick="buyfunc('<%- stock_details._id %>','<%- stock_details.no_of_stock %>')">Buy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="/scripts/stockdetails-js.js"></script>
</body>

</html>