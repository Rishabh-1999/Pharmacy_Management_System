<html>

    <head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" >
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <link href="css/partial.css" rel="stylesheet" type = "text/css">
        <link href="css/style.css" rel="stylesheet" type = "text/css">
    </head>

<body>

<div id="viewscreen" >
    <%- include('partials/sidebar.ejs') %>
    <div class="container">
        <div class="col-sm-3"></div>
            <div class="col-sm-6" style="border: 5px solid rgba(0,0,0,0.1);margin-top: 40px;">              
                <center><h1 class="heading" style="color: black;">Billing</h1></center>
                        <table class="addStockBoxTable">
                            <tbody>
                                <tr class="addStockTableRow">
                                        <th class="addStockTableHeading">
                                            <span class="addStockHeadingText">Doctor Name</span>
                                        </th>
                                        <th class="addStockTableHeading">
                                            <span class="addStockHeadingText">Customer Name</span>
                                        </th>
                                        <th class="addStockTableHeading">
                                            <span class="addStockHeadingText">Customer Contact</span>
                                        </th>           
                                </tr>

                                <tr class="addStockTableRow">
                                    <th class="addStockTableHeading">
                                        <input type="text" class="form-control" placeholder="Enter Doctor Name"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="text" class="form-control" placeholder="Enter Customer Name"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="text" class="form-control" placeholder="Enter Customer Contact"><br>
                                    </th>
                                </tr>
                            </tbody>
                        </table>

                        <table class="addStockBoxTable">
                            <tbody>
                                <tr class="addStockTableRow">
                                    <th class="addStockTableHeading">
                                        <span class="addStockHeadingText">Medicine</span>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <span class="addStockHeadingText">Quantity</span>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <span class="addStockHeadingText">Price</span>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <span class="addStockHeadingText">Discount(%)</span>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <span class="addStockHeadingText">Tax(%)</span>
                                    </th>              
                                </tr>

                                <tr class="addStockTableRow">
                                    <th class="addStockTableHeading">
                                        <input type="text" class="form-control" placeholder="Enter Medicine"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="number" class="form-control" placeholder="Enter Quantity"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="number" class="form-control" placeholder="Enter Price"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="number" class="form-control" placeholder="Enter Discount"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="number" class="form-control" placeholder="Enter Tax"><br>
                                    </th>
                                    <th class="addStockTableHeading">
                                        <input type="submit" value="+ Add" class="btn btn-success" readonly=""><br>
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                        <input type="submit" value="Delete" class="btn btn-danger" readonly=""><br>
            </div>
        </div>          
    </div>
</div>
</html>