    <div id="viewscreen">
        <%- include('partials/sidebar.ejs') %>

        <div class="container">
            <div class="col-sm-2"></div>
            <div class="col-sm-10" style="border: 5px solid rgba(0,0,0,0.1);margin-top: 40px;">
                <center>
                    <h1 class="heading" style="color: black;"><u>Manage Vendors</u></h1>
